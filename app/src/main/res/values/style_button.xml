<?xml version="1.0" encoding="utf-8"?>
<resources  >

    <style name="Button.accent" parent="android:Widget.Button">
        <item name="fontPath">fonts/regular.otf</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/selector_accent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">155dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="Button.transparent.dark" parent="android:Widget.Button">
        <item name="fontPath">fonts/regular.otf</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/selector_corner_white</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>


    <style name="Button.transparent" parent="android:Widget.Button">
        <item name="fontPath">fonts/regular.otf</item>
        <item name="android:minWidth">155dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>


    <style name="Button.transparent.width" parent="android:Widget.Button">
        <item name="android:textAppearance">@style/TextAppearance.Large.Light</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>


    <style name="Button.transparent.light" parent="android:Widget.Button">
        <item name="fontPath">fonts/regular.otf</item>
        <item name="android:minWidth">155dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/selector_corner_dark</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="Button.circle.accent" parent="android:Widget.Button">
        <item name="android:background">@drawable/selector_circle_accent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:scaleType">fitCenter</item>

        <item  name="srcCompat">@drawable/ic_next_white</item>
        <item name="android:padding">14dp</item>
    </style>


</resources>