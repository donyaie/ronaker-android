<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.ronaker.app.ui.addProduct.AddProductImageAdapterViewModel"/>
        <variable
                name="baseViewModel"
                type="com.ronaker.app.ui.addProduct.AddProductViewModel"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">


        <ImageView android:layout_width="155dp"
                   app:layout_constraintTop_toTopOf="parent"
                   android:id="@+id/image"
                   android:scaleType="centerCrop"
                   app:mutableImage="@{viewModel.getProductImage()}"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:layout_height="155dp"/>
        <ImageView android:layout_width="32dp" android:padding="6dp"

                   android:onClick="@{()->baseViewModel.onClickRemoveImage(viewModel.getID())}"

                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   android:src="@drawable/ic_remove_red" android:layout_height="32dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>