<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.ronaker.app.ui.addProduct.AddProductImageAdapterViewModel"/>
        <variable
                name="baseViewModel"
                type="com.ronaker.app.ui.addProduct.AddProductViewModel"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">



        <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="3dp"
                android:layout_width="155dp"
                   app:layout_constraintTop_toTopOf="parent"
                   android:id="@+id/image"
                   android:scaleType="centerCrop"
                   app:mutableImage="@{viewModel.getProductImage()}"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:layout_height="155dp"/>
        <ImageView android:layout_width="32dp" android:padding="6dp"

                   android:onClick="@{()->baseViewModel.onClickRemoveImage(viewModel.getImage())}"

                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:srcCompat="@drawable/ic_remove_red" android:layout_height="32dp"/>

<RelativeLayout android:visibility="gone"
                android:focusable="true"
        app:mutableVisibility="@{viewModel.getLoadingVisibility()}" android:id="@+id/loading" android:background="#39000000" android:gravity="center" android:clickable="true" app:layout_constraintTop_toTopOf="@id/image" app:layout_constraintBottom_toBottomOf="@id/image"
                app:layout_constraintRight_toRightOf="@id/image" app:layout_constraintLeft_toLeftOf="@id/image" android:layout_width="0dp" android:layout_height="0dp">

    <com.wang.avi.AVLoadingIndicatorView android:layout_width="wrap_content" android:layout_height="wrap_content"/>

</RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>