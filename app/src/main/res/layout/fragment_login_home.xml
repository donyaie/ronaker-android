<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.ronaker.app.ui.login.LoginViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:orientation="vertical">

            <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_ronaker_white"/>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="24dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_ronaker_text"/>


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"

                    android:gravity="center"
                    android:lineHeight="30dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:text="Rent things you only need for a short time, from your nearby."
                    android:textColor="@color/white_opacity_75"
                    android:textAppearance="@style/TextAppearance.Large.Light"/>


        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="40dp">


            <Button

                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/register_button"
                    android:onClick="@{viewModel.signupClickListener}"
                    android:text="Create Account"
                    app:layout_constraintWidth_percent=".4"
                    style="@style/Button.accent"
                    android:layout_marginStart="32dp"/>




            <Button

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent=".4"
                    app:layout_constraintEnd_toEndOf="parent"

                    style="@style/Button.transparent.dark"
                    android:id="@+id/login_button"
                    android:layout_width="0dp"
                    android:onClick="@{viewModel.loginClickListener}"
                    android:text="Login"

                    app:layout_constraintStart_toEndOf="@+id/register_button"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>