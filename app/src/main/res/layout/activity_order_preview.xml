<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable
                name="viewModel"
                type="com.ronaker.app.ui.orderPreview.OrderPreviewViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:layoutDirection="ltr">


        <com.ronaker.app.utils.view.ToolbarComponent
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/toolbar"
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:toolbar_component_title="@string/app_name"
                app:toolbar_component_transparent="false"
                app:toolbar_component_action_text="Cancel"
                app:toolbar_component_bottom_line="false"
                app:toolbar_component_dot_count="4"
                app:toolbar_component_center_container="NONE"
                app:toolbar_component_action_container="NONE"
                app:toolbar_component_cancel_container="CLOSE"
        />

        <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                                               app:layout_constraintTop_toBottomOf="@id/toolbar"
                                               app:layout_constraintBottom_toTopOf="@id/footer"
                                               android:layout_height="0dp">

            <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
                          android:layout_height="wrap_content">


                <LinearLayout android:orientation="horizontal"


                        android:onClick="@{()->viewModel.onClickItem()}"
                        android:minHeight="112dp" android:gravity="center"
                              android:layout_width="match_parent" android:layout_height="wrap_content">


                    <LinearLayout android:orientation="vertical" android:layout_width="0dp"
                                  android:layout_weight=".95"
                                  android:layout_marginRight="16dp"
                                  android:layout_marginLeft="24dp"
                                  android:layout_height="wrap_content">


                        <TextView android:textAppearance="@style/TextAppearance.Medium.SB" android:minLines="2"

                                  app:mutableText="@{viewModel.getProductTitle()}"

                                  android:text="sample product"
                                  android:textColor="@color/colorTextDark"
                                  android:layout_width="match_parent" android:layout_height="wrap_content"
                                tools:ignore="HardcodedText" />


                        <TextView android:textAppearance="@style/TextAppearance.Large.Regular"

                                  app:mutableText="@{viewModel.getDayNumber()}"
                                  android:text="$124 for 2 day"
                                  android:layout_marginTop="16dp"
                                  android:textColor="@color/colorTextDark"
                                  android:layout_width="match_parent" android:layout_height="wrap_content"
                                tools:ignore="HardcodedText" />


                    </LinearLayout>

                    <com.makeramen.roundedimageview.RoundedImageView android:layout_width="80dp"
                                                                     app:riv_corner_radius="3dp"

android:src="@color/colorPlatinGrey"

                                                                     app:mutableImage="@{viewModel.getProductImage()}"
                                                                     android:layout_marginRight="24dp"
                                                                     android:scaleType="fitCenter"
                                                                     app:srcCompat="@drawable/ic_empty_product"
                                                                     android:layout_height="80dp"/>


                </LinearLayout>


                <RelativeLayout android:layout_width="match_parent" android:layout_height="1dp"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp" android:background="@color/colorPlatinGrey"/>


                <LinearLayout android:minHeight="72dp" android:layout_marginRight="24dp"
                              android:layout_marginLeft="24dp" android:gravity="center"
                              android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="horizontal">


                    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                                  android:layout_weight=".50"
                                  android:gravity="left"
                                  android:layout_height="wrap_content">

                        <TextView android:layout_marginBottom="4dp"
                                  app:mutableText="@{viewModel.getStartDayName()}"
                                  android:textAppearance="@style/TextAppearance.Small.Regular" android:text="Monday"
                                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                                tools:ignore="HardcodedText" />

                        <TextView android:textAppearance="@style/TextAppearance.Large.Regular" android:text="21 May"

                                  app:mutableText="@{viewModel.getFirstDayMonth()}"
                                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                                tools:ignore="HardcodedText" />


                    </LinearLayout>
                    <ImageView android:layout_width="24dp" app:srcCompat="@drawable/ic_chevron_right"
                               android:tint="@color/colorIconDark" android:layout_height="24dp"/>


                    <LinearLayout android:layout_weight=".50" android:orientation="vertical"
                                  android:layout_width="wrap_content"
                                  android:gravity="right"
                                  android:layout_height="wrap_content">

                        <TextView android:layout_marginBottom="4dp"

                                  app:mutableText="@{viewModel.getEndDayName()}"
                                  android:textAppearance="@style/TextAppearance.Small.Regular" android:text="Friday"
                                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                                tools:ignore="HardcodedText" />

                        <TextView android:textAppearance="@style/TextAppearance.Large.Regular" android:text="23 May"

                                  app:mutableText="@{viewModel.getEndDayMonth()}"
                                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                                tools:ignore="HardcodedText" />


                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout android:layout_width="match_parent" android:layout_height="1dp"
                                android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp" android:background="@color/colorPlatinGrey"/>


                <LinearLayout android:layout_width="match_parent"  app:mutableVisibility="@{viewModel.getUserInfoVisibility()}" android:paddingRight="24dp" android:paddingLeft="24dp"

                              android:minHeight="112dp" android:gravity="center" android:layout_height="wrap_content"
                              android:orientation="horizontal">


                    <LinearLayout android:layout_width="0dp"
                                  android:layout_weight=".95"

                                  android:orientation="vertical"
                                  android:layout_height="wrap_content">


                        <TextView android:textAppearance="@style/TextAppearance.Heading.2" android:text="David"

                                  app:mutableText="@{viewModel.getUserName()}"
                                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                                tools:ignore="HardcodedText" />


                        <LinearLayout android:layout_marginTop="11dp" android:layout_width="wrap_content" android:layout_height="wrap_content"
                                      android:orientation="horizontal">


                            <ImageView android:layout_marginRight="8dp" android:layout_width="32dp" app:srcCompat="@drawable/ic_rating" android:layout_height="32dp"/>


                            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:orientation="vertical">
                                <TextView android:textAppearance="@style/TextAppearance.Large.SB" android:text="87%"
                                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        tools:ignore="HardcodedText" />

                                <TextView android:textAppearance="@style/TextAppearance.Medium.Light" android:text="@string/title_positive_rate"
                                          android:layout_width="wrap_content" android:layout_height="wrap_content"/>


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                    <com.makeramen.roundedimageview.RoundedImageView app:riv_corner_radius="32dp"
                                                                     android:layout_width="64dp"

                                                                     app:mutableImage="@{viewModel.getUserImage()}"
                                                                     android:src="@color/colorPlatinGrey"
                                                                     android:layout_height="64dp"/>


                </LinearLayout>


                <RelativeLayout android:layout_width="match_parent" android:layout_height="1dp"
                                android:layout_marginLeft="24dp"
                        app:mutableVisibility="@{viewModel.getUserInfoVisibility()}"
                                android:layout_marginRight="24dp" android:background="@color/colorPlatinGrey"/>




                <TextView android:text="Description"

                          app:mutableText="@{viewModel.getOrderDescription()}"
                          android:layout_margin="24dp" android:textAppearance="@style/TextAppearance.Large.Light" android:layout_width="match_parent" android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />




            </LinearLayout>



        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
                app:mutableVisibility="@{viewModel.getActionVisibility()}"  android:id="@+id/footer" android:layout_width="match_parent"
                                                           android:background="@color/white"

                                                           app:layout_constraintBottom_toBottomOf="parent"
                                                           android:layout_height="80dp">
            <RelativeLayout android:layout_width="match_parent" app:layout_constraintTop_toTopOf="parent"
                            android:layout_height="1dp" android:background="@color/colorPlatinGrey"/>


            <LinearLayout android:layout_width="match_parent" android:weightSum="4" android:orientation="horizontal" android:gravity="center" android:layout_height="match_parent">



                <Button style="@style/Button.transparent" android:text="@string/button_decline"

android:layout_weight="1"
                        app:mutableVisibility="@{viewModel.getDeclineVisibility()}"

                        android:onClick="@{()->viewModel.onClickDecline()}"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"

                />


                <Button style="@style/Button.accent" android:text="@string/button_accept"

                        android:layout_weight="1"
                        app:mutableVisibility="@{viewModel.getAcceptVisibility()}"

                        android:onClick="@{()->viewModel.onClickAccept()}"

                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"

                />


                <Button style="@style/Button.transparent" android:text="@string/button_cancel"

                        android:layout_weight="1"
                        app:mutableVisibility="@{viewModel.getCancelVisibility()}"

                        android:onClick="@{()->viewModel.onClickCanceled()}"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"

                />


                <Button style="@style/Button.accent" android:text="@string/button_finish"

                        android:layout_weight="1"
                        app:mutableVisibility="@{viewModel.getFinishVisibility()}"

                        android:onClick="@{()->viewModel.onClickFinished()}"

                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"

                />



            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.ronaker.app.utils.view.LoadingComponent
                android:visibility="gone"
                app:loading_transparent="false"
                android:id="@+id/loading" android:layout_width="match_parent"
                android:layout_height="match_parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
