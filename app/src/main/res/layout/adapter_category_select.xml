<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewModel"
                type="com.ronaker.app.ui.addProduct.CategorySelectViewModel" />
    </data>


    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:clickable="true"

            android:gravity="center"
            android:layoutDirection="ltr"
            android:onClick="@{()->viewModel.onClickProduct()}"
            android:orientation="vertical"
            android:focusable="true">


        <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_weight=".95"
                android:gravity="center_vertical"

                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.Large.Light"

                android:text="location"

                android:textColor="@color/colorTextDark"
                app:mutableText="@{viewModel.getProductTitle()}"
                tools:ignore="HardcodedText" />


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/colorPlatinGrey" />

    </LinearLayout>


</layout>