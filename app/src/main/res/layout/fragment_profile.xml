<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.ronaker.app.ui.profile.ProfileViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                                               android:layout_marginTop="@dimen/statusBarSize"
                                               android:layout_height="match_parent">


            <LinearLayout android:paddingTop="50dp" android:orientation="vertical"
                          app:layout_constraintTop_toTopOf="parent" android:layout_width="match_parent"
                          android:layout_height="wrap_content">


                <LinearLayout android:gravity="center" android:orientation="horizontal"
                              android:layout_width="match_parent" android:minHeight="112dp"
                              android:layout_height="wrap_content">


                    <com.makeramen.roundedimageview.RoundedImageView android:layout_marginLeft="24dp"
                                                                     app:riv_corner_radius="36dp"
                                                                     android:layout_width="72dp"
                                                                     android:layout_height="72dp"/>


                    <LinearLayout android:layout_marginRight="22dp" android:orientation="vertical"
                                  android:layout_marginLeft="16dp" android:layout_width="0dp"
                                  android:layout_weight=".95" android:layout_height="wrap_content">


                        <TextView

                                android:text="name"
                                android:textColor="@color/colorTextDark"
                                android:textAppearance="@style/TextAppearance.Heading.2"
                                android:layout_width="match_parent" android:layout_height="wrap_content"/>


                        <TextView

                                android:text="Edit Profile"
                                android:textColor="@color/colorTextDark"
                                android:layout_marginTop="8dp"
                                android:textAppearance="@style/TextAppearance.Medium.Regular"
                                android:layout_width="match_parent" android:layout_height="wrap_content"/>


                        <ProgressBar android:layout_width="match_parent" android:layout_marginTop="12dp"
                                     style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                     android:progress="20"
                                     android:max="100"
                                     android:layout_height="wrap_content"/>


                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_marginTop="8dp"
                                      android:orientation="horizontal"
                                      android:layout_height="wrap_content">


                            <TextView

                                    android:text="Complete Profile"
                                    android:textColor="@color/colorTextDark"
                                    android:layout_weight=".95"
                                    android:textAppearance="@style/TextAppearance.Medium.Regular"
                                    android:layout_width="0dp" android:layout_height="wrap_content"/>

                            <TextView

                                    android:text="3 fo 5"
                                    android:textColor="@color/colorTextDark"
                                    android:textAppearance="@style/TextAppearance.Medium.Regular"
                                    android:layout_width="wrap_content" android:layout_height="wrap_content"

                            />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                         android:orientation="horizontal"
                        android:layout_marginTop="20dp" android:gravity="center" android:layout_width="match_parent"
                        android:layout_height="64dp">


                    <ImageView android:layout_width="32dp" android:layout_height="32dp"
                               android:layout_marginRight="16dp"
                               app:srcCompat="@drawable/ic_settings"
                               android:layout_marginLeft="24dp"/>

                    <TextView android:layout_width="0dp"

                              android:layout_weight=".95"
                              android:layout_height="wrap_content"
                              android:textAppearance="@style/TextAppearance.Large.SB"
                              android:textColor="@color/colorTextDark"

                              android:text="Setting"/>

                </LinearLayout>

                <RelativeLayout android:layout_width="match_parent" android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp" android:layout_height="1dp"
                                android:background="@color/colorPlatinGrey"/>



                <LinearLayout
                      android:orientation="horizontal"
                       android:gravity="center" android:layout_width="match_parent"
                        android:layout_height="64dp">


                    <ImageView android:layout_width="32dp" android:layout_height="32dp"
                               android:layout_marginRight="16dp"
                               app:srcCompat="@drawable/ic_credit"
                               android:layout_marginLeft="24dp"/>

                    <TextView android:layout_width="0dp"

                              android:layout_weight=".95"
                              android:layout_height="wrap_content"
                              android:textAppearance="@style/TextAppearance.Large.SB"
                              android:textColor="@color/colorTextDark"

                              android:text="Payment"/>

                </LinearLayout>

                <RelativeLayout android:layout_width="match_parent" android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp" android:layout_height="1dp"
                                android:background="@color/colorPlatinGrey"/>




                <LinearLayout
                        android:onClick="@{()->viewModel.onClickLogout()}" android:orientation="horizontal"
                      android:gravity="center" android:layout_width="match_parent"
                        android:layout_height="64dp">


                    <ImageView android:layout_width="32dp" android:layout_height="32dp"
                               android:layout_marginRight="16dp"
                               android:layout_marginLeft="24dp"/>

                    <TextView android:layout_width="0dp"

                              android:layout_weight=".95"
                              android:layout_height="wrap_content"
                              android:textAppearance="@style/TextAppearance.Large.SB"
                              android:textColor="@color/colorTextDark"

                              android:text="@string/title_logout"/>

                </LinearLayout>


                <RelativeLayout android:layout_width="match_parent" android:layout_marginLeft="24dp"
                                android:layout_marginRight="24dp" android:layout_height="1dp"
                                android:background="@color/colorPlatinGrey"/>



                <LinearLayout
                       android:orientation="horizontal"
                    android:gravity="center" android:layout_width="match_parent"


                        android:id="@+id/language"
                        android:layout_height="64dp">


                    <ImageView android:layout_width="32dp" android:layout_height="32dp"
                               android:layout_marginRight="16dp"
                               android:layout_marginLeft="24dp"/>

                    <TextView android:layout_width="0dp"

                              android:layout_weight=".95"
                              android:layout_height="wrap_content"
                              android:textAppearance="@style/TextAppearance.Large.SB"
                              android:textColor="@color/colorTextDark"

                              android:text="Change Language"/>

                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <com.ronaker.app.utils.view.LoadingComponent android:layout_width="match_parent"
                                                     android:id="@+id/loading"
                                                     android:visibility="gone"
                                                     app:loading_transparent="false"
                                                     android:layout_height="match_parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>