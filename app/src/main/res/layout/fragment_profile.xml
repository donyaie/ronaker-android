<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewModel"
                type="com.ronaker.app.ui.profile.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


        <com.ronaker.app.utils.view.StatusBarSizeView


                android:id="@+id/statusBar"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/statusBar">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="50dp"
                    app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minHeight="112dp"
                        android:orientation="horizontal">


                    <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="72dp"


                            android:layout_height="72dp"
                            android:layout_marginLeft="24dp"
                            android:scaleType="fitCenter"
                            android:src="@color/colorPlatinGrey"
                            app:mutableImage="@{viewModel.getUserAvatar()}"
                            app:riv_corner_radius="36dp" />


                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="22dp"
                            android:layout_weight=".95"
                            android:orientation="vertical">


                        <TextView

                                android:layout_width="match_parent"


                                android:layout_height="wrap_content"

                                android:text="name"
                                android:textAppearance="@style/TextAppearance.Heading.2"
                                android:textColor="@color/colorTextDark"
                                app:mutableText="@{viewModel.getUserName()}"
                                tools:ignore="HardcodedText" />


                        <TextView

                                android:layout_width="match_parent"
                                android:id="@+id/edit_text"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                app:mutableVisibility="@{viewModel.getEditVisibility()}"
                                android:text="@string/title_edit_profile"
                                android:textAppearance="@style/TextAppearance.Medium.Regular"
                                android:textColor="@color/colorTextDark" />


                        <ProgressBar

                                app:mutableProgress="@{viewModel.getCompleteProgress()}"
                                app:mutableVisibility="@{viewModel.getCompleteProgressVisibility()}"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:max="5"

                                android:progress="0" />


                        <LinearLayout
                                android:layout_width="match_parent"
                                android:id="@+id/complete_layout"
                                android:layout_height="wrap_content"
                                app:mutableVisibility="@{viewModel.getCompleteVisibility()}"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">


                            <TextView

                                    android:id="@+id/complete_text"

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".95"
                                    android:text="@string/title_complete_profile"
                                    android:textAppearance="@style/TextAppearance.Medium.Regular"
                                    android:textColor="@color/colorTextDark" />

                            <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3 fo 5"

                                    app:mutableText="@{viewModel.getUserStep()}"

                                    android:textAppearance="@style/TextAppearance.Medium.Regular"
                                    android:textColor="@color/colorTextDark"

                                    tools:ignore="HardcodedText" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                    <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="16dp"
                            android:padding="6dp"
                            app:srcCompat="@drawable/ic_settings" />

                    <TextView
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight=".95"
                            android:text="@string/title_setting"
                            android:textAppearance="@style/TextAppearance.Large.SB"

                            android:textColor="@color/colorTextDark" />

                </LinearLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="24dp"
                        android:visibility="gone"
                        android:layout_marginRight="24dp"
                        android:background="@color/colorPlatinGrey" />


                <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/payment_layout"
                        android:layout_width="match_parent"


                        android:layout_height="64dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                    <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="16dp"
                            android:padding="6dp"
                            app:srcCompat="@drawable/ic_credit" />

                    <TextView
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight=".95"
                            android:text="@string/title_payment"
                            android:textAppearance="@style/TextAppearance.Large.SB"

                            android:textColor="@color/colorTextDark" />

                </LinearLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:background="@color/colorPlatinGrey" />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:gravity="center"
                        android:onClick="@{()->viewModel.onClickLogout()}"
                        android:orientation="horizontal">


                    <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="24dp"

                            android:padding="6dp"
                            app:srcCompat="@drawable/ic_settings"
                            android:layout_marginRight="16dp" />

                    <TextView
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight=".95"
                            android:text="@string/title_logout"
                            android:textAppearance="@style/TextAppearance.Large.SB"

                            android:textColor="@color/colorTextDark" />

                </LinearLayout>


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:background="@color/colorPlatinGrey" />


                <LinearLayout
                        android:id="@+id/language"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"


                        android:gravity="center"
                        android:orientation="horizontal">


                    <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"

                            android:padding="6dp"
                            app:srcCompat="@drawable/ic_settings"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="16dp" />

                    <TextView
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight=".95"
                            android:text="Change Language"
                            android:textAppearance="@style/TextAppearance.Large.SB"

                            android:textColor="@color/colorTextDark"
                            tools:ignore="HardcodedText" />

                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <com.ronaker.app.utils.view.LoadingComponent
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:loading_transparent="false" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>