<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.ronaker.app.ui.profile.ProfileViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">

        <TextView android:id="@+id/header"
                  app:layout_constraintTop_toTopOf="parent"


                  android:text="@string/title_profile"
                  android:layout_marginRight="24dp"
                  android:layout_marginLeft="24dp"
                  android:layout_marginTop="80dp"
                  android:textAppearance="@style/TextAppearance.Heading.1"


                  android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <LinearLayout android:orientation="vertical" app:layout_constraintTop_toBottomOf="@id/header" android:layout_width="match_parent" android:layout_height="wrap_content">

            <RelativeLayout android:layout_width="match_parent" android:layout_marginTop="20dp" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_height="1dp" android:background="@color/colorPlatinGrey"/>

            <TextView android:layout_width="match_parent" android:layout_height="50dp" android:paddingRight="24dp"
                      android:paddingLeft="24dp"
                      android:textAppearance="@style/TextAppearance.Large.SB"
                      android:textColor="@color/colorTextDark"
                      android:onClick="@{()->viewModel.onClickLogout()}"

                      android:gravity="left|center_vertical" android:text="@string/title_logout"/>


            <RelativeLayout android:layout_width="match_parent" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_height="1dp" android:background="@color/colorPlatinGrey"/>

            <TextView android:layout_width="match_parent" android:layout_height="50dp" android:paddingRight="24dp"
                      android:paddingLeft="24dp"
                      android:id="@+id/language"
                      android:textAppearance="@style/TextAppearance.Large.SB"
                      android:textColor="@color/colorTextDark"

                      android:gravity="left|center_vertical" android:text="Change Language"/>



        </LinearLayout>



        <com.ronaker.app.utils.view.LoadingComponent android:layout_width="match_parent"
                                                     android:id="@+id/loading"
                                                     android:visibility="gone"
                                                     app:loading_transparent="false"
                                                     android:layout_height="match_parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>