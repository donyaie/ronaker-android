<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.ronaker.app.ui.exploreProduct.ExploreProductViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">


        <ScrollView android:layout_width="match_parent" android:fillViewport="true" android:id="@+id/scroll_view"
                    android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:paddingBottom="180dp"
                                                               android:layout_height="wrap_content">


                <ImageView
                        android:scaleType="centerCrop"

                        app:mutableImage="@{viewModel.getProductImage()}"
                        android:layout_width="match_parent" android:id="@+id/avatar_image"
                        app:layout_constraintTop_toTopOf="parent" android:layout_height="320dp"/>


                <TextView app:layout_constraintTop_toBottomOf="@id/avatar_image"
                          android:text="Title"
                          android:textColor="@color/colorTextDark"
                          android:layout_marginLeft="24dp"

                          app:mutableText="@{viewModel.getProductTitle()}"
                          android:layout_marginRight="24dp"
                          android:layout_marginTop="24dp"
                          android:textAppearance="@style/TextAppearance.Heading.1"
                          android:id="@+id/title_text"
                          android:layout_width="match_parent" android:layout_height="wrap_content"/>


                <TextView app:layout_constraintTop_toBottomOf="@id/title_text"
                          android:text="Description"
                          android:layout_marginLeft="24dp"

                          app:mutableText="@{viewModel.getProductDescription()}"
                          android:layout_marginRight="24dp"
                          android:layout_marginTop="24dp"
                          android:layout_marginBottom="24dp"
                          android:textAppearance="@style/TextAppearance.Large.Light"
                          android:id="@+id/description_text"
                          android:layout_width="match_parent" android:layout_height="wrap_content"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_marginTop="40dp"
                        app:layout_constraintTop_toBottomOf="@id/description_text"
                        android:layout_width="match_parent"
                        android:layout_height="220dp">


                    <fragment
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/map"

                            android:name="com.google.android.gms.maps.SupportMapFragment"/>

                    <androidx.cardview.widget.CardView app:cardElevation="16dp"
                                                       android:layout_marginRight="24dp"
                                                       android:layout_marginLeft="24dp"
                                                       app:cardCornerRadius="4dp"

                                                       android:layout_marginTop="16dp"
                                                       app:layout_constraintTop_toTopOf="parent"

                                                       android:layout_width="match_parent"
                                                       android:layout_height="48dp">
                        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"


                                                                           android:layout_height="48dp">
                            <TextView android:text="Location Address" android:layout_width="match_parent"
                                      android:gravity="left|center_vertical"

                                      android:paddingLeft="16dp"
                                      android:textAppearance="@style/TextAppearance.Medium.SB"

                                      android:textColor="@color/colorTextGreyLight"
                                      android:layout_height="match_parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>

        <RelativeLayout android:id="@+id/status_bar" android:background="@color/transparent"
                        app:layout_constraintTop_toTopOf="parent" android:layout_width="match_parent"
                        android:layout_height="@dimen/statusBarSize"/>

        <com.ronaker.app.utils.view.ToolbarComponent
                app:layout_constraintTop_toBottomOf="@id/status_bar"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:toolbar_component_transparent="true"
                app:toolbar_component_bottom_line="false"
                app:toolbar_component_dot_count="3"
                app:toolbar_component_center_container="NONE"
                app:toolbar_component_action_container="TWO_BUTTON"
                app:toolbar_component_cancel_container="CLOSE"
        />
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:background="@color/white"
                                                           app:layout_constraintBottom_toBottomOf="parent"
                                                           android:layout_height="80dp">

            <RelativeLayout android:layout_width="match_parent" app:layout_constraintTop_toTopOf="parent"
                            android:layout_height="1dp" android:background="@color/colorPlatinGrey"/>


            <Button style="@style/Button.accent" android:text="Check Out"
                    android:id="@+id/checkout"

                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:onClick="@{()->viewModel.checkOut()}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="24dp"
                    android:layout_width="wrap_content"

            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>