<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewModel"
                type="com.ronaker.app.ui.profileEdit.ProfileEditViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/white"
            android:gravity="center"
            android:layoutDirection="ltr">


        <com.ronaker.app.utils.view.ToolbarComponent
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:toolbar_component_action_container="TWO_BUTTON"
                app:toolbar_component_bottom_line="false"
                app:toolbar_component_cancel_container="BACK"
                app:toolbar_component_center_container="NONE"
                app:toolbar_component_dot_count="3"
                app:toolbar_component_transparent="false" />

        <androidx.core.widget.NestedScrollView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <TextView
                        android:id="@+id/title_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"

                        android:layout_marginTop="24dp"
                        android:layout_marginRight="24dp"
                        android:text="@string/text_complete_your_profile"
                        android:textAppearance="@style/TextAppearance.Heading.1"
                        android:textColor="@color/colorTextDark"
                        app:layout_constraintTop_toBottomOf="@id/avatar_image" />

                <TextView
                        android:id="@+id/description_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"

                        android:layout_marginTop="24dp"
                        android:layout_marginRight="16dp"
                        android:text="@string/title_we_need_few_details_for_renting_or_lending_out"
                        android:textAppearance="@style/TextAppearance.Large.Regular"
                        android:textColor="@color/colorTextDark"

                        android:layout_marginBottom="24dp"
                        app:layout_constraintTop_toBottomOf="@id/avatar_image" />



                <LinearLayout
                        android:id="@+id/sign_layout"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".95"
                            android:text="@string/titile_sign_up"
                            android:textAppearance="@style/TextAppearance.Large.Light"
                            android:textColor="@color/colorTextDark" />

                    <ImageView
                            android:layout_width="20dp"
                            android:id="@+id/sign_image"
                            android:layout_height="20dp"

                            android:padding="3dp"
                            app:srcCompat="@drawable/ic_complete" />


                </LinearLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:background="@color/colorPlatinGrey" />

                <LinearLayout

                        android:id="@+id/image_layout"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".95"
                            android:text="@string/title_add_profile_image"
                            android:textAppearance="@style/TextAppearance.Large.Light"
                            android:textColor="@color/colorTextDark" />

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:id="@+id/image_image"

                            android:padding="3dp"
                            app:srcCompat="@drawable/ic_chevron_right" />


                </LinearLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:background="@color/colorPlatinGrey" />
                <LinearLayout

                        android:id="@+id/phone_layout"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".95"
                            android:text="@string/title_add_and_verify_phone_number"
                            android:textAppearance="@style/TextAppearance.Large.Light"
                            android:textColor="@color/colorTextDark" />

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:id="@+id/phone_image"

                            android:padding="3dp"
                            app:srcCompat="@drawable/ic_chevron_right" />


                </LinearLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:background="@color/colorPlatinGrey" />

                <LinearLayout

                        android:id="@+id/payment_layout"
                        android:layout_width="match_parent"
                        android:layout_height="73dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".95"
                            android:text="@string/title_add_a_payment_method"
                            android:textAppearance="@style/TextAppearance.Large.Light"
                            android:textColor="@color/colorTextDark" />

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:id="@+id/payment_image"

                            android:padding="3dp"
                            app:srcCompat="@drawable/ic_chevron_right" />


                </LinearLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:background="@color/colorPlatinGrey" />
                <LinearLayout

                        android:id="@+id/identity_layout"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".95"
                            android:text="@string/title_verify_your_identity"
                            android:textAppearance="@style/TextAppearance.Large.Light"
                            android:textColor="@color/colorTextDark" />

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:id="@+id/identity_image"

                            android:padding="3dp"
                            app:srcCompat="@drawable/ic_chevron_right" />


                </LinearLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:background="@color/colorPlatinGrey" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <com.ronaker.app.utils.view.LoadingComponent


                android:id="@+id/loading"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                android:layout_width="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="0dp"
                android:visibility="visible"
                app:loading_transparent="false" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
