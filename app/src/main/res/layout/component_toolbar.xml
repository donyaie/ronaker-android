<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="48dp"

            android:id="@+id/container_layout"
            android:layout_width="match_parent">

        <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/cancel_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="18dp"
                android:tint="@color/white"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/ic_back_white"/>


        <LinearLayout
                android:id="@+id/countDots"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal"/>


        <TextView

                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                android:textAppearance="@style/TextAppearance.Medium.SB"
                android:textColor="@color/colorTextLight"
                android:text="@string/caption_title"

        />

        <LinearLayout app:layout_constraintRight_toRightOf="parent"
                      android:orientation="horizontal"
                      android:layout_width="wrap_content"

                      android:id="@+id/action_Layout"
                      android:gravity="center"
                      android:layout_height="match_parent">




            <ImageView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/action1_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="15dp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_share_white"/>
            <ImageView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/action2_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="15dp"
                    android:tint="@color/white"
                    android:layout_marginRight="8dp"
                    app:srcCompat="@drawable/ic_fave_white"/>


            <TextView android:id="@+id/action_text" android:layout_width="57dp"
                      android:text="@string/caption_title"

                      android:gravity="right|center_vertical"
                      android:paddingRight="12dp"
                      android:textAppearance="@style/TextAppearance.Small.Regular"

                      android:textColor="@color/colorTextLight"
                      android:layout_height="match_parent"/>
        </LinearLayout>




        <RelativeLayout
                android:id="@+id/line" app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/colorPlatinGrey" android:layout_width="match_parent"
                android:layout_height="1dp">


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
