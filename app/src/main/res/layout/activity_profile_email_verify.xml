<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewModel"
                type="com.ronaker.app.ui.profileEmailVerify.ProfileEmailVerifyViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:background="@color/white"
            android:gravity="center"
            android:layoutDirection="ltr">





        <TextView
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="60dp"
            android:id="@+id/title_text"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Verify Your Email"
            android:textAppearance="@style/TextAppearance.Heading.1"
            android:textColor="@color/colorTextDark"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/title_text"
            app:layout_constraintBottom_toTopOf="@id/goto_text_text"
            android:tint="@color/colorTextDark"
            app:srcCompat="@drawable/ic_email_large"
            android:layout_height="200dp"/>




        <TextView
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:id="@+id/goto_text_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:onClick="@{()->viewModel.gotoMailClick()}"
            android:text="Go to your mail box"
            android:textAppearance="@style/TextAppearance.Large.Light"
            android:textColor="@color/colorTextDark"
            app:layout_constraintBottom_toTopOf="@id/retry"/>



        <Button
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:id="@+id/retry"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/Button.accent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:onClick="@{()->viewModel.resendMailClick()}"
            android:text="Resend Email"
            android:textAppearance="@style/TextAppearance.Large.Light"
            app:layout_constraintBottom_toBottomOf="parent" />












    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
