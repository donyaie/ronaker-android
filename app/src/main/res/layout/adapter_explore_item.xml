<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.ronaker.app.ui.explore.ItemExploreViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="172dp"
            android:padding="8dp"
            android:onClick="@{()->viewModel.onClickProduct()}"

            android:layout_gravity="center"
            android:layout_height="216dp">
        <ImageView android:layout_width="156dp"
                   app:layout_constraintTop_toTopOf="parent"
                   android:id="@+id/image"

                   android:scaleType="centerCrop"
                   app:mutableImage="@{viewModel.getProductImage()}"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:layout_height="140dp"/>


        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@id/image"
                  android:layout_marginTop="4dp"
                  android:text="title"

                  app:mutableText="@{viewModel.getProductTitle()}"
                  android:id="@+id/title"
                  android:textColor="@color/colorTextDark"
                  android:textAppearance="@style/TextAppearance.Medium.SB"
                  android:lines="2"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@id/title"
                  android:layout_marginTop="4dp"
                  android:id="@+id/price"

                  app:mutableText="@{viewModel.getProductPrice()}"
                  android:text="price"
                  android:textAppearance="@style/TextAppearance.Small.Regular"
                  android:lines="1"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>