<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.ronaker.app.ui.orderMessage.OrderMessageViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">


        <com.ronaker.app.utils.view.ToolbarComponent
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:toolbar_component_transparent="false"
                app:toolbar_component_bottom_line="false"
                app:toolbar_component_action_text="Clear"
                app:toolbar_component_center_container="NONE"
                app:toolbar_component_action_container="NONE"
                app:toolbar_component_cancel_container="CLOSE"
        />

        <ScrollView android:layout_width="match_parent" app:layout_constraintTop_toBottomOf="@id/toolbar"
                    app:layout_constraintBottom_toBottomOf="parent" android:fillViewport="true" android:orientation="vertical"
                    android:layout_height="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="80dp"
                    android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent"
                          app:layout_constraintTop_toTopOf="parent"
                          android:layout_marginTop="24dp"
                          android:layout_marginLeft="24dp"
                          android:layout_marginRight="24dp"
                          android:text="@string/title_send_a_meesage_to_owner"
                          android:textAppearance="@style/TextAppearance.Heading.1"
                          android:gravity="left"
                          android:id="@+id/title"
                          android:textColor="@color/colorTextDark"
                          android:layout_height="wrap_content"/>

                <com.ronaker.app.utils.view.InputComponent
                        android:layout_marginRight="24dp"
                        android:inputType="textMultiLine"
                        app:input_transparent="false"
                        android:imeOptions="actionNext"
                        app:inputMutableText="@{viewModel.getOrderMessage()}"
                        android:id="@+id/message_input"
                        app:input_title=""
                        app:input_hint="Send message to owner and ask about availability or â€¦."
                        app:input_regex="^\\s*(?:\\S\\s*){2,500}$"
                        app:input_counter="500"
                        android:layout_marginLeft="24dp"
                        app:layout_constraintTop_toBottomOf="@id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>




        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:background="@color/white"
                                                           app:layout_constraintBottom_toBottomOf="parent"
                                                           android:layout_height="80dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/price"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"
                      android:layout_marginLeft="26dp"
                      android:layout_marginTop="16dp"

                      app:mutableText="@{viewModel.getProductPrice()}"

                      android:textAppearance="@style/TextAppearance.Heading.2"
                      android:text="@string/title_defult_price"

            />


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/priceTitle"
                      app:mutableText="@{viewModel.getProductPriceTitle()}"
                      app:layout_constraintTop_toBottomOf="@id/price"
                      app:layout_constraintLeft_toLeftOf="parent"
                      android:textAppearance="@style/TextAppearance.Small.Regular"
                      android:layout_marginLeft="26dp"
                      android:text="@string/title_per_day"

            />


            <RelativeLayout android:layout_width="match_parent" app:layout_constraintTop_toTopOf="parent"
                            android:layout_height="1dp" android:background="@color/colorPlatinGrey"/>


            <Button style="@style/Button.accent" android:text="@string/title_send_request"
                    android:id="@+id/checkout"

                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:onClick="@{()->viewModel.checkOut(messageInput.getText().toString())}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginRight="24dp"
                    android:layout_width="wrap_content"

            />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>