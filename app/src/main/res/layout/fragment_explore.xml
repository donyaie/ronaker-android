<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.ronaker.app.ui.explore.ExploreViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">


        <com.ronaker.app.utils.view.StatusBarSizeView


                android:id="@+id/statusBar"

                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"

            android:layout_height="@dimen/statusBarSize" />

        <androidx.cardview.widget.CardView


                app:layout_constraintTop_toBottomOf="@id/statusBar"
                android:layout_width="match_parent"
                android:id="@+id/header"
                app:cardUseCompatPadding="false"
                android:clickable="false"

                android:focusable="false"
                android:gravity="center"
                app:cardElevation="3dp"
                android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView app:cardElevation="16dp"
                                               app:cardCornerRadius="3dp"

                                               android:onClick="@{()->viewModel.onClickSearch()}"
                                               app:layout_constraintTop_toTopOf="parent"
                                              android:clickable="true"
                                               android:focusable="true"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
            >
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"






                                                                   android:id='@+id/search_layout'


                                                                   android:layout_height="48dp">

                    <ImageView android:layout_width="20dp" android:layout_height="20dp"
                               app:srcCompat="@drawable/ic_back_white"

                               android:clickable="false"

                               android:focusable="false"
                               android:id="@+id/back_image"
                               android:visibility="gone"

                               app:layout_constraintLeft_toLeftOf="parent"
                               android:layout_marginStart="12dp"
                               android:padding="3dp"
                               app:layout_constraintTop_toTopOf="parent"
                               app:layout_constraintBottom_toBottomOf="parent"
                               android:tint="@color/colorTextGreyLight"
                        android:contentDescription="@string/text_content" />

                    <TextView android:text="@string/title_search_here" android:layout_width="0dp"
                              android:gravity="start|center_vertical"
                              android:clickable="false"
app:layout_constraintRight_toLeftOf="@id/search_image"
                              app:layout_constraintLeft_toRightOf="@id/back_image"

                              android:focusable="false"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                              android:textAppearance="@style/TextAppearance.Medium.SB"
android:id="@+id/search_text"
                              android:textColor="@color/colorTextGreyLight"
                              android:layout_height="match_parent"/>

                    <ImageView android:layout_width="20dp" android:layout_height="20dp"
                               app:srcCompat="@drawable/ic_search_white"

                               android:clickable="false"

                               android:id="@+id/search_image"
                               android:focusable="false"

                               app:layout_constraintRight_toRightOf="parent"
                               android:layout_marginEnd="12dp"
                               app:layout_constraintTop_toTopOf="parent"
                               app:layout_constraintBottom_toBottomOf="parent"
                               android:tint="@color/colorTextGreyLight"
                        android:contentDescription="@string/text_content" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>



            <TextView android:layout_width="wrap_content"
                      android:layout_gravity="end|center_vertical"


                      android:id="@+id/cancelSearch"

                      android:layout_height="48dp"
                      android:gravity="center"
                      android:textColor="@color/colorTextDark"
                      android:textAppearance="@style/TextAppearance.Small.Regular"

                      android:layout_marginEnd="-50dp"

                      android:layout_marginTop="6dp"/>


        </androidx.cardview.widget.CardView>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:layout_width="match_parent"

                                                               android:id="@+id/refreshLayout"
                                                               app:layout_constraintTop_toBottomOf="@id/header"
                                                               app:layout_constraintBottom_toBottomOf="parent"
                                                               android:layout_height="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                >
            <androidx.recyclerview.widget.RecyclerView   android:layout_width="match_parent"
                                                         android:id="@+id/recycler"

                                                         android:paddingRight="16dp"
                                                         android:paddingLeft="16dp"

                                                         app:adapter="@{viewModel.getProductListAdapter()}"
                                                         android:layout_height="match_parent"/>




                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/empty_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:mutableVisibility="@{viewModel.getEmptyVisibility()}">

                    <ImageView
                            android:id="@+id/empty_image"
                            android:layout_width="280dp"
                        android:contentDescription="@string/text_content"
                            android:layout_height="180dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_empty_product" />


                    <TextView
                            android:id="@+id/empty_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:text="@string/text_not_found_item"
                            android:textAppearance="@style/TextAppearance.Large.SB"
                            app:layout_constraintTop_toBottomOf="@id/empty_image" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



        <com.ronaker.app.utils.view.LoadingComponent android:layout_width="match_parent"
                                                     android:id="@+id/loading"
                                                     app:loading_transparent="false"
                                                     app:layout_constraintTop_toBottomOf="@id/header"
                                                     app:layout_constraintBottom_toBottomOf="parent"
                                                     android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>