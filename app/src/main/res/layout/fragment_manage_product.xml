<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.ronaker.app.ui.manageProduct.ManageProductViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">


        <ScrollView android:layout_width="match_parent" android:fillViewport="true" android:id="@+id/scroll_view"
                    android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:paddingBottom="80dp"
                                                               android:layout_height="wrap_content">

                <ImageView
                        android:scaleType="centerCrop"
                        android:background="@color/colorPlatinGrey"
                        app:mutableImage="@{viewModel.getProductImage()}"
                        android:layout_width="match_parent" android:id="@+id/avatar_image"
                        app:layout_constraintTop_toTopOf="parent" android:layout_height="320dp"/>


                <TextView app:layout_constraintTop_toBottomOf="@id/avatar_image"
                          android:text="@string/caption_title"
                          android:textColor="@color/colorTextDark"
                          android:layout_marginLeft="24dp"

                          app:mutableText="@{viewModel.getProductTitle()}"
                          android:layout_marginRight="24dp"
                          android:layout_marginTop="24dp"
                          android:textAppearance="@style/TextAppearance.Heading.1"
                          android:id="@+id/title_text"
                          android:layout_width="match_parent" android:layout_height="wrap_content"/>


                <LinearLayout android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@id/title_text"
                              android:layout_width="match_parent" android:orientation="vertical"


                              android:layout_height="wrap_content">
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_marginLeft="24dp"
                                    android:layout_marginRight="24dp"
                                    android:layout_height="1dp" android:background="@color/colorPlatinGrey"/>

                    <LinearLayout android:layout_width="match_parent"
                                  android:gravity="center_vertical"
                                  android:paddingLeft="24dp"
                                  android:id="@+id/active_layout"
                                  android:paddingRight="24dp"
                                  android:orientation="horizontal"
                                  android:layout_height="80dp">
                        <LinearLayout android:layout_width="0dp"
                                      android:orientation="vertical"

                                      android:layout_weight=".95"
                                      android:layout_height="wrap_content">


                            <TextView android:layout_width="wrap_content"
                                      android:textColor="@color/colorTextDark"
                                      android:text="@string/title_is_item_available"
                                      android:layout_marginBottom="8dp"
                                      android:textAppearance="@style/TextAppearance.Small.SB"
                                      android:layout_height="wrap_content"/>
                            <TextView android:layout_width="wrap_content"
                                      android:textColor="@color/colorTextDark"
                                      android:text="@string/title_active"
                                      android:textAppearance="@style/TextAppearance.Large.Light"
                                      android:layout_height="wrap_content"/>


                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat android:layout_width="wrap_content"
                                                                android:id="@+id/active_switch"
                                                                android:layout_height="wrap_content"/>


                    </LinearLayout>
                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_marginLeft="24dp"
                                    android:layout_marginRight="24dp"
                                    android:layout_height="1dp" android:background="@color/colorPlatinGrey"/>

                    <LinearLayout android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="24dp"
                            android:id="@+id/name_layout"
                            android:paddingRight="24dp"
                            android:orientation="horizontal"
                            android:layout_height="56dp">

                        <TextView android:layout_width="0dp"
                                android:textColor="@color/colorTextDark"
                                android:layout_weight=".95" android:text="@string/title_name_and_description"
                                android:textAppearance="@style/TextAppearance.Large.Light"
                                android:layout_height="wrap_content"/>
                        <ImageView android:layout_width="20dp" app:srcCompat="@drawable/ic_chevron_right"

                                android:padding="3dp"
                                android:layout_height="20dp"/>


                    </LinearLayout>

                    <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_height="1dp" android:background="@color/colorPlatinGrey"/>
                    <LinearLayout android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="24dp"
                            android:id="@+id/category_layout"
                            android:paddingRight="24dp"
                            android:orientation="horizontal"
                            android:layout_height="56dp">

                        <TextView android:layout_width="0dp"
                                android:textColor="@color/colorTextDark"
                                android:layout_weight=".95" android:text="Categories"
                                android:textAppearance="@style/TextAppearance.Large.Light"
                                android:layout_height="wrap_content"/>
                        <ImageView android:layout_width="20dp" app:srcCompat="@drawable/ic_chevron_right"

                                android:padding="3dp"
                                android:layout_height="20dp"/>


                    </LinearLayout>

                    <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_height="1dp" android:background="@color/colorPlatinGrey"/>
                    <LinearLayout android:layout_width="match_parent"
                                  android:gravity="center_vertical"
                                  android:paddingLeft="24dp"
                                  android:id="@+id/image_layout"
                                  android:paddingRight="24dp"
                                  android:orientation="horizontal"
                                  android:layout_height="56dp">

                        <TextView android:layout_width="0dp"
                                  android:textColor="@color/colorTextDark"
                                  android:layout_weight=".95" android:text="@string/title_images_gallery"
                                  android:textAppearance="@style/TextAppearance.Large.Light"
                                  android:layout_height="wrap_content"/>
                        <ImageView android:layout_width="20dp"
                                   android:padding="3dp" app:srcCompat="@drawable/ic_chevron_right"
                                   android:layout_height="20dp"/>


                    </LinearLayout>

                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_marginLeft="24dp"
                                    android:layout_marginRight="24dp"
                                    android:layout_height="1dp" android:background="@color/colorPlatinGrey"/>
                    <LinearLayout android:layout_width="match_parent"
                                  android:gravity="center_vertical"
                                  android:paddingLeft="24dp"
                                  android:id="@+id/price_layout"
                                  android:paddingRight="24dp"
                                  android:orientation="horizontal"
                                  android:layout_height="56dp">

                        <TextView android:layout_width="0dp"
                                  android:textColor="@color/colorTextDark"
                                  android:layout_weight=".95" android:text="@string/title_asking_price"
                                  android:textAppearance="@style/TextAppearance.Large.Light"
                                  android:layout_height="wrap_content"/>
                        <ImageView android:layout_width="20dp" android:padding="3dp"
                                   app:srcCompat="@drawable/ic_chevron_right"
                                   android:layout_height="20dp"/>


                    </LinearLayout>

                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_marginLeft="24dp"
                                    android:layout_marginRight="24dp"
                                    android:layout_height="1dp" android:background="@color/colorPlatinGrey"/>
                    <LinearLayout android:layout_width="match_parent"
                                  android:gravity="center_vertical"
                                  android:paddingLeft="24dp"
                                  android:id="@+id/location_layout"
                                  android:paddingRight="24dp"
                                  android:orientation="horizontal"
                                  android:layout_height="56dp">

                        <TextView android:layout_width="0dp"
                                  android:textColor="@color/colorTextDark"
                                  android:layout_weight=".95" android:text="@string/title_location"
                                  android:textAppearance="@style/TextAppearance.Large.Light"
                                  android:layout_height="wrap_content"/>
                        <ImageView android:layout_width="20dp" android:padding="3dp"
                                   app:srcCompat="@drawable/ic_chevron_right"
                                   android:layout_height="20dp"/>


                    </LinearLayout>

                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_marginLeft="24dp"
                                    android:layout_marginRight="24dp"
                                    android:layout_height="1dp" android:background="@color/colorPlatinGrey"/>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>


        <com.ronaker.app.utils.view.ToolbarComponent
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:toolbar_component_transparent="true"
                app:toolbar_component_bottom_line="false"
                app:toolbar_component_dot_count="3"
                app:toolbar_component_center_container="NONE"
                app:toolbar_component_action_container="TWO_BUTTON"
                app:toolbar_component_cancel_container="BACK"
        />

        <com.ronaker.app.utils.view.LoadingComponent android:layout_width="match_parent"
                                                     android:id="@+id/loading"

                                                     app:loading_transparent="false"
                                                     app:layout_constraintTop_toTopOf="parent"
                                                     app:layout_constraintBottom_toBottomOf="parent"
                                                     android:layout_height="0dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>