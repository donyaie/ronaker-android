<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_layout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        <TextView
                android:id="@+id/title_text"
                app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="@style/TextAppearance.Medium.SB"
                android:textColor="@color/colorTextLight"
                android:text="@string/caption_title"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <EditText app:layout_constraintTop_toBottomOf="@id/title_text"
                  android:textAppearance="@style/TextAppearance.Large.Regular"
                  android:gravity="left|center_vertical"
                  android:textColor="@color/colorTextLight"
                  android:background="@null"
                  android:hint="@string/caption_title"
                  android:paddingBottom="8dp"
                  android:paddingTop="8dp"
                  android:minHeight="53dp"

                  android:textColorHint="@color/colorAshGrey"
                  android:id="@+id/input_edit"
                  android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <ImageView app:layout_constraintRight_toRightOf="parent"
                   android:src="@drawable/ic_field_empty"
                   android:padding="3dp"
                   android:id="@+id/inputState_image"
                   app:layout_constraintBottom_toBottomOf="@id/input_edit"
                   app:layout_constraintTop_toTopOf="@id/input_edit" android:layout_width="20dp" android:layout_height="20dp"/>



        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/input_line"
                app:layout_constraintTop_toBottomOf="@id/input_edit"
                android:background="@color/colorPlatinGrey"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


        <LinearLayout android:orientation="horizontal"
                      android:id="@+id/alert_layer"
                      android:gravity="top"
                      android:minHeight="32dp" app:layout_constraintTop_toBottomOf="@id/input_edit" android:layout_width="match_parent" android:layout_height="wrap_content">
            
            <ImageView android:layout_width="24dp" android:layout_height="24dp"
                       android:src="@drawable/ic_guide_light"
                       android:id="@+id/alert_image"
                       android:alpha="0"
                       android:layout_marginTop="4dp"
                       android:padding="4dp"
            />

            <TextView android:layout_width="match_parent"
                      android:gravity="left|top"
                      android:layout_weight=".95"
                      android:layout_marginTop="7dp"
                      android:text="@string/caption_title"
                      android:alpha="0"

                      android:id="@+id/alert_text"
                      android:textAppearance="@style/TextAppearance.Small.Regular"
                      android:textColor="@color/colorTextLight"
                      android:layout_marginRight="8dp" android:layout_marginLeft="8dp" android:layout_height="wrap_content"/>


            <TextView
                    android:visibility="gone"
                    android:id="@+id/counter_text"
                    android:textAppearance="@style/TextAppearance.Small.Regular"
                    android:textColor="@color/colorTextLight"
                    android:layout_marginTop="7dp" android:text="0/0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
