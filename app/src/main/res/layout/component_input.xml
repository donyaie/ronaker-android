<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"

            android:id="@+id/container_layout"
            android:layout_width="match_parent">
        <TextView
                android:id="@+id/title_text"
                app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="@style/TextAppearance.Medium.SB"
                android:textColor="@color/colorTextLight"
                android:text="Title"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <EditText app:layout_constraintTop_toBottomOf="@id/title_text"
                  android:textAppearance="@style/TextAppearance.Large.Regular"
                  android:gravity="left|center_vertical"
                  android:textColor="@color/colorTextLight"
                  android:background="@null"
                  android:hint="Place Holder Here"
                  android:textColorHint="@color/colorAshGrey"
                  android:id="@+id/input_edit"
                  android:layout_width="match_parent" android:layout_height="50dp"/>


        <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/input_edit"
                android:background="@color/colorPlatinGrey" android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
