<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.ronaker.app.ui.manageProductList.ManageProductListViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">

        <ScrollView android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/statusBarSize"
                    android:fillViewport="true"
                    android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <TextView android:id="@+id/header"

                          android:text="Your Listings"
                          android:layout_marginRight="24dp"
                          android:layout_marginLeft="24dp"
                          android:layout_marginTop="92dp"
                          android:textAppearance="@style/TextAppearance.Heading.1"

                          app:layout_constraintTop_toTopOf="parent"

                          android:layout_width="match_parent" android:layout_height="wrap_content"/>


                <Button android:layout_width="wrap_content"
                        android:visibility="gone"

                        app:layout_constraintRight_toRightOf="parent"

                        style="@style/Button.accent"
                        android:id="@+id/addNewProduct_button"
                        android:text="Add Item"
                        android:minWidth="160dp"
                        app:layout_constraintBottom_toBottomOf="@id/header"
                        android:layout_height="wrap_content" tools:layout_marginTop="92dp"
                        android:layout_marginRight="16dp"/>


                <androidx.recyclerview.widget.RecyclerView android:layout_width="wrap_content"
                                                           android:id="@+id/recycler"
                                                           app:layout_constraintLeft_toLeftOf="parent"
                                                           app:layout_constraintRight_toRightOf="parent"


                                                           android:layout_marginTop="27dp"
                                                           app:adapter="@{viewModel.getProductListAdapter()}"
                                                           app:layout_constraintTop_toBottomOf="@id/header"
                                                           android:layout_height="wrap_content"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/header"
                        android:visibility="gone"
                        android:id="@+id/empty_layout"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="wrap_content"
                >

                    <ImageView
                            android:id="@+id/empty_image"
                            android:src="@drawable/ic_empty_product"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_width="280dp" android:layout_height="180dp"/>


                    <TextView app:layout_constraintTop_toBottomOf="@id/empty_image"
                              android:layout_marginTop="16dp"
                              android:id="@+id/empty_title"
                              android:text="You have not  any item yet."
                              android:gravity="center"
                              android:textAppearance="@style/TextAppearance.Large.SB"
                              android:layout_width="match_parent" android:layout_height="wrap_content"/>

                    <TextView app:layout_constraintTop_toBottomOf="@id/empty_title"
                              android:layout_marginTop="8dp"
                              android:id="@+id/empty_description"
                              android:text="Start to make money from your items."

                              android:gravity="center"
                              android:textAppearance="@style/TextAppearance.Medium.Light"
                              android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <Button android:layout_width="wrap_content"

                            app:layout_constraintTop_toBottomOf="@id/empty_description"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            style="@style/Button.accent"
                            android:layout_marginTop="24dp"
                            android:id="@+id/addProduct_button"
                            android:text="Add First Item"
                            android:minWidth="160dp"
                            android:layout_height="wrap_content"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <com.ronaker.app.utils.view.LoadingComponent android:layout_width="match_parent"
                                                     android:id="@+id/loading"

                                                     app:layout_constraintTop_toTopOf="parent"
                                                     app:layout_constraintBottom_toBottomOf="parent"
                                                     android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>