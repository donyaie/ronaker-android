<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.ronaker.app.ui.search.CategorySearchViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:paddingStart="24dp"

        android:paddingEnd="24dp"



        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
           app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorPlatinGrey"


            />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="40dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="20dp" />



        <TextView
            app:layout_constraintTop_toTopOf="@id/image"
            app:layout_constraintBottom_toBottomOf="@id/image"
            android:id="@+id/title"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/caption_title"
            android:textAppearance="@style/TextAppearance.Large.SB"
            android:textColor="@color/colorTextDark"
            app:layout_constraintTop_toBottomOf="@id/image"
            app:mutableText="@{viewModel.getTitle()}" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>