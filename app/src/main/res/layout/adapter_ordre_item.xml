<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.ronaker.app.ui.orders.OrderItemViewModel"/>
    </data>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:onClick="@{()->viewModel.onClickProduct()}"
            app:cardElevation="5dp"
            app:cardCornerRadius="3dp"

            android:layout_gravity="center"
            android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"

                                                           android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                    app:riv_corner_radius="3dp"
                    android:layout_width="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/image"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    app:mutableImage="@{viewModel.getProductImage()}"
                    app:layout_constraintRight_toRightOf="parent"

                    android:layout_height="80dp"/>


            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      app:layout_constraintTop_toTopOf="parent"
                      android:layout_marginTop="16dp"
                      android:text="@string/caption_title"
                      android:layout_marginRight="16dp"
                      app:layout_constraintRight_toLeftOf="@id/image"
                      android:layout_marginLeft="16dp"
                      app:layout_constraintLeft_toLeftOf="parent"

                      app:mutableText="@{viewModel.getProductTitle()}"
                      android:id="@+id/title"
                      android:textColor="@color/colorTextDark"
                      android:textAppearance="@style/TextAppearance.Medium.SB"
                      android:lines="2"/>


            <TextView android:layout_width="0dp" android:layout_height="wrap_content"

                      android:layout_marginRight="16dp"
                      app:layout_constraintRight_toLeftOf="@id/image"
                      android:layout_marginLeft="16dp"
                      app:layout_constraintLeft_toLeftOf="parent"
                      android:layout_marginTop="5dp"
                      android:id="@+id/date"
                      app:layout_constraintTop_toBottomOf="@+id/title"
                      app:mutableText="@{viewModel.getProductDate()}"
                      android:text="@string/caption_title"
                      android:textAppearance="@style/TextAppearance.Small.Regular"
                      android:lines="1"/>

            <TextView android:layout_width="0dp" android:layout_height="wrap_content"

                      android:layout_marginRight="16dp"
                      app:layout_constraintRight_toLeftOf="@id/image"
                      android:layout_marginLeft="16dp"
                      app:layout_constraintLeft_toLeftOf="parent"
                      android:layout_marginTop="2dp"
                      android:id="@+id/price"
                      app:layout_constraintTop_toBottomOf="@+id/date"
                      app:mutableText="@{viewModel.getProductPrice()}"
                      android:text="@string/caption_title"
                      android:textAppearance="@style/TextAppearance.Medium.SB"
                      android:lines="1"/>


            <RelativeLayout
                    android:id="@+id/split"
                    app:layout_constraintTop_toBottomOf="@id/price"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/colorPlatinGrey"
                    android:layout_width="match_parent" android:layout_height="1dp"/>

            <LinearLayout android:paddingLeft="12dp" android:paddingRight="12dp" android:gravity="center_vertical"
                          android:orientation="horizontal" app:layout_constraintTop_toBottomOf="@id/split"
                          android:layout_width="match_parent" android:layout_height="47dp">

                <ImageView android:layout_width="24dp" android:padding="4dp" app:srcCompat="@drawable/ic_remove_red"



                           app:mutableImageSrc="@{viewModel.getOrderStatusImage()}"

                           android:layout_height="24dp"/>

                <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                          android:layout_weight=".95"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          app:layout_constraintLeft_toLeftOf="parent"
                          android:id="@+id/status"
                          android:gravity="left"

                          app:mutableText="@{viewModel.getOrderStatus()}"
                          android:text="Lend | Canceled order"
                          android:textAppearance="@style/TextAppearance.Small.Regular"
                          android:lines="1"
                        tools:ignore="HardcodedText" />

                <ImageView android:layout_width="24dp" android:padding="4dp" app:srcCompat="@drawable/ic_chevron_right"


                           android:tint="@color/colorAshGrey"
                           android:layout_height="24dp"/>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>